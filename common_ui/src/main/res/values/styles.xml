<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Кнопка "Добавить в коризну" -->
    <style name="Widget.App.Button.Yellow" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Кнопка "Уведомления" -->
    <style name="Widget.App.NotificationIcon" parent="">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">?attr/notificationIconBackground</item>
        <item name="android:padding">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="srcCompat">@drawable/ic_bell</item>
        <item name="tint">@color/black</item>
    </style>

</resources>
