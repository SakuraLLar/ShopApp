<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.bottomnavigation.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation_view_common"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="bottom"
    android:layout_marginBottom="16dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/inner_bottom_nav_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/button_yellow_bg"
        android:orientation="horizontal">

<!--        Explorer-->
        <LinearLayout
            android:id="@+id/nav_explorer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_explorer_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/btn_1"
                app:tint="@color/lightDark" />

            <TextView
                android:id="@+id/text_view_explorer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Explorer"
                android:textAlignment="center"
                android:textColor="@color/lightDark"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

<!--        Cart-->
        <LinearLayout
            android:id="@+id/nav_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_cart_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/btn_2"
                app:tint="@color/lightDark" />

            <TextView
                android:id="@+id/text_view_cart_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cart"
                android:textAlignment="center"
                android:textColor="@color/lightDark"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

<!--        Orders-->
        <LinearLayout
            android:id="@+id/nav_orders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_orders_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/btn_3"
                app:tint="@color/lightDark" />

            <TextView
                android:id="@+id/text_view_orders_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Orders"
                android:textAlignment="center"
                android:textColor="@color/lightDark"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

<!--        Wishlist-->
        <LinearLayout
            android:id="@+id/nav_wishlist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_wishlist_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/btn_4"
                app:tint="@color/lightDark" />

            <TextView
                android:id="@+id/text_view_wishlist_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Wishlist"
                android:textAlignment="center"
                android:textColor="@color/lightDark"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

<!--        Profile-->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_profile_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/btn_5"
                app:tint="@color/lightDark" />

            <TextView
                android:id="@+id/text_view_profile_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="@color/lightDark"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.bottomnavigation.BottomNavigationView>
